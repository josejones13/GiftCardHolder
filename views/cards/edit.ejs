<!DOCTYPE html>
<html>
<head>
  <title>Edit Card</title>
  <%- include("../partials/head") %>
</head>
<body>

<%- include("../partials/header") %>

<div class="container mt-5" style="max-width: 650px;">
  <div class="card shadow border-0">
    <div class="card-body">

      <h2 class="fw-bold mb-4 text-center">Edit Gift Card</h2>

      <form action="/cards/<%= card._id %>?_method=PUT" method="POST">

        <div class="mb-3">
          <label class="form-label">Card Brand</label>
          <input class="form-control" name="cardBrand" value="<%= card.cardBrand %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Card Number</label>
          <input class="form-control" name="cardNumber" value="<%= card.cardNumber %>" required>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Balance ($)</label>
            <input class="form-control" name="balance" type="number" step="0.01" value="<%= card.balance %>" required>
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Expiry Date</label>
            <input class="form-control" name="expiryDate" type="date" value="<%= card.expiryDate %>">
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Notes</label>
          <textarea class="form-control" name="notes" rows="3"><%= card.notes %></textarea>
        </div>

        <button class="btn btn-success btn-lg w-100">Save Changes</button>
      </form>

      <a href="/cards" class="btn btn-link w-100 mt-3">‚Üê Back to My Cards</a>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
</body>
</html>
