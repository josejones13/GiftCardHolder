<!DOCTYPE html>
<html>
<head>
  <title>My Gift Cards</title>
  <%- include("../partials/head") %>
</head>
<body>

<%- include("../partials/header") %>

<div class="container mt-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Your Gift Cards</h2>
    <a class="btn btn-primary btn-lg" href="/cards/new">+ Add New Card</a>
  </div>

  <% if (cards.length === 0) { %>
    <div class="text-center mt-5">
      <h4 class="text-muted">You haven't added any gift cards yet.</h4>
      <a href="/cards/new" class="btn btn-outline-primary mt-3">Add Your First Card</a>
    </div>
  <% } else { %>

    <div class="row">
      <% cards.forEach(card => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow border-0 h-100">
            <div class="card-body">

              <h4 class="fw-bold"><%= card.cardBrand %></h4>
              <p class="text-muted mb-1">
                <strong>Card Number:</strong> <%= card.cardNumber %>
              </p>
              <p class="text-muted mb-1">
                <strong>Balance:</strong> $<%= card.balance %>
              </p>
              <p class="text-muted">
                <strong>Expires:</strong> <%= card.expiryDate %>
              </p>

              <div class="d-flex justify-content-between mt-3">
                <a href="/cards/<%= card._id %>/edit" class="btn btn-outline-secondary btn-sm">Edit</a>

                <!-- Trigger delete modal -->
                <button class="btn btn-danger btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#deleteModal<%= card._id %>">
                  Delete
                </button>
              </div>

            </div>
          </div>
        </div>

        <!-- Delete Modal -->
        <div class="modal fade" id="deleteModal<%= card._id %>" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

              <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>

              <div class="modal-body">
                Are you sure you want to delete your
                <strong><%= card.cardBrand %></strong> card?<br>
                <small class="text-muted">This action cannot be undone.</small>
              </div>

              <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/cards/<%= card._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-danger">Yes, Delete</button>
                </form>
              </div>

            </div>
          </div>
        </div>
      <% }); %>
    </div>

  <% } %>
</div>

<%- include("../partials/footer") %>
</body>
</html>

